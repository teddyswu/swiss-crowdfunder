<div id="main" class="push py-14 mt-10 mt-lg-12">
	<div class="container">
    <div class="row">
      <div class="col-12">
        <div class="text-center text-success mb-7">
          <h1 class="font-weight-bold">管理</h1>
          <div class="h3">發退款信</div>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid border-bottom mb-6 pt-3">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="nav-responsive">
            <ul class="nav nav-tabs nav-justified border-bottom-0">
              <li class="nav-item">
              	<%= link_to "訂單匯入", order_batch_uploads_path, class:"nav-link " %>
              </li>
              <li class="nav-item">
              	<%= link_to "發退款信", send_refund_letters_path, class:"nav-link active" %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
	<div class="container">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header"><strong>新增</strong></div>
          <div class="card-body card-block">
            <%= form_for @rl, :url => send_refund_letters_path(@rl), :method => :post do |f| %>
              <div class="form-group">
                <%= f.label("退款提案", :class => 'form-control-label') %>
                <%= f.select :campaign_id, options_from_collection_for_select(@campaign, "id", "title") %>
              </div>
              <div class="form-group">
                <%= f.label("傳送時間", :class => 'form-control-label') %><%= f.datetime_local_field(:run_at, :class => "form-control", placeholder: "輸入傳送名單")%>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-sm">
                  Submit
                </button>
                <button type="reset" class="btn btn-danger btn-sm">
                  Reset
                </button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
		</div>
	</div>
</div>