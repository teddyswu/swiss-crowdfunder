<div id="user_info">
  <div class="form-group">
    <label for="formName" class="d-flex justify-content-between">收件人</label>
    <input value="<%= current_user.user_profile.first_name%>" class="form-control" placeholder="必填，請填寫真實姓名，若不正確可能造成投遞失敗。" type="text" name="order[supporter_attributes][first_name]" id="order_supporter_attributes_first_name">
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="formCountry" class="d-flex justify-content-between">
        縣市
      </label>
      <select class="form-control" onchange="change_city_select(value)" prompt="縣市" name="order[supporter_attributes][city_id]" id="order_supporter_attributes_city_id">
        <%= options_from_collection_for_select(@cities,"id","name", :selected => current_user.user_profile.city_id)%>
      </select>
    </div>
    <div class="form-group col-md-6">
      <label for="formCountry" class="d-flex justify-content-between">鄉鎮市區</label>
      <select class="form-control" prompt="鄉鎮市區" name="order[supporter_attributes][district_id]" id="order_supporter_attributes_district_id">
        <%= options_from_collection_for_select(@districts,"id","name", :selected => current_user.user_profile.district_id)%>
      </select>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-10">
      <label for="formAddress" class="d-flex justify-content-between">地址</label>
      <input value="<%=current_user.user_profile.address%>" class="form-control" placeholder="請輸入地址" type="text" name="order[supporter_attributes][address]" id="order_supporter_attributes_address">
    </div>
    <div class="form-group col-md-2">
      <label for="formNum" class="d-flex justify-content-between">郵遞區號</label>
      <input value="<%= current_user.user_profile.district.zipcode%>" class="form-control" type="text" name="order[supporter_attributes][postal_code]" id="order_supporter_attributes_postal_code">
    </div>
  </div>
  <div class="form-group">
    <label for="formPhone" class="d-flex justify-content-between">聯絡電話</label>
    <input value="<%= current_user.user_profile.cell_phone%>" class="form-control" placeholder="請輸入電話" type="text" name="order[supporter_attributes][cell_phone]" id="order_supporter_attributes_cell_phone">
  </div>
  <div class="form-group">
    <label for="formMail" class="d-flex justify-content-between">聯絡信箱</label>
    <input value="<%= current_user.email %>" class="form-control" type="text" name="order[supporter_attributes][email]" id="order_supporter_attributes_email">
    <p id="email_format" style="font-size: 10px;color: red;"></p>
  </div>
</div>