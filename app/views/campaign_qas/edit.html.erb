<div id="main" class="push py-14 mt-10 mt-lg-12">
  <div class="container mb-3">
    <%= form_for @campaign_qa, :url => campaign_qa_path(@campaign_qa), :method => :patch, :html => {:class => 'form-horizontal'} do |f| %>
    	<div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("問題", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.text_field(:campaign_question, :class => "form-control")%>
        </div>
      </div>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("答案", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.text_area(:campaign_answer, :class => "form-control", :rows => "8")%>
        </div>
      </div>
      <div class="card-footer">
        <button type="submit" class="btn btn-primary btn-sm">
          <i class="fa fa-dot-circle-o"></i> Submit
        </button>
        <button type="reset" class="btn btn-danger btn-sm">
          <i class="fa fa-ban"></i> Reset
        </button>
      </div>
    <% end %>
  </div>
</div>