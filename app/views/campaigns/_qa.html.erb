<% campaign_qas.each_with_index do |cqa, i|%>
	<div style="font-size: 0.875rem">
	  <div style="font-weight: bold">
	    <%= i + 1 %>. <%= cqa.campaign_question %>
      <% if user_signed_in? %>
      	<% if current_user.id == @campaign.user_id%>
	    		<%= link_to "編輯", "##", :onclick => "window.open('#{edit_campaign_qa_path(cqa.id)}', '編輯', config='height=500,width=500');"%>
	    	<% end %>
	    <% end %>
	  </div>
	  <div style="font-size: 0.875rem;background-color: #f4f4f4;margin-top: 0.5rem;padding: 1rem;">
	    <%= cqa.campaign_answer%>
	  </div>
	</div>
<% end %>