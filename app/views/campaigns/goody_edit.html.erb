<div class="container">	
	<%= form_for @goody, :url => goody_update_campaign_path(@goody), :method => :patch, :html => {:class => 'form-horizontal'} do |f| %>
  	<%= f.hidden_field :campaign_id, :value => @goody.campaign_id%>
  	<%= f.fields_for :goody_image, @goody.input_goody_image do |i|%>
      <%= i.label "上傳圖片(若不修改，請勿上傳)"%>
      <%= i.file_field :file, :class => "form-control"%>
    <% end %>
		<%= f.label :title, "標題" %><%= f.text_field :title, :class => "form-control" %>
		<%= f.label :description, "描述" %><%= f.text_area :description, :class => "form-control", rows: 4 %>
		<%= f.label :price, "金額" %><%= f.number_field :price, :class => "form-control" %>
		<%= f.label :quantity, "數量" %><%= f.number_field :quantity, :class => "form-control" %>
		<%= f.label :delivery_time, "預計送達時間"%><%= f.date_field :delivery_time, :class => "form-control"%>
		<%= f.label :sort, "排序(越小越上面)"%><%= f.number_field :sort, :class => "form-control"%>
		<%= f.submit "送出"%>
    <%= f.submit "取消", :type => "reset" %>
	<% end %>
</div>