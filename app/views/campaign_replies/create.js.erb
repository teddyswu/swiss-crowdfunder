<% if @campaign_reply.parent_id == 0%>
	$("#new_reply").append("<div class=\"border p-3 mb-6\"><div class=\"media\"><img class=\"img-fluid rounded-circle mr-3\" src=\"<%= @campaign_reply.user.authorizations.present? ? "https://graph.facebook.com/#{@campaign_reply.user.authorizations[0].uid}/picture" : "https://help.lebara.com/assets/images/fdecb4bb.profile.jpg"%>\" style=\"width: 50px\"><div class=\"media-body\"><div class=\"row\"><div class=\"col\"><a href=\"/users/<%= @campaign_reply.user.id %>?locale=zh-TW\"><%= @campaign_reply.user.user_profile.nickname%></a><span class=\"badge badge-outlined badge-primary\">贊助人</span></div><div class=\"col\"><div class=\"text-right text-muted\"><small><%= @campaign_reply.created_at.strftime('%F') %></small></div></div></div><p><%= @campaign_reply.content %></p></div></div></div>" );
	$("#campaign_reply_content").val("");
<% else %>
	$("#reply_<%= @campaign_reply.parent_id %>").append("<div class=\"media\"><img class=\"img-fluid rounded-circle mr-3\" src=\"<%= @campaign_reply.user.authorizations.present? ? "https://graph.facebook.com/#{@campaign_reply.user.authorizations[0].uid}/picture" : "https://help.lebara.com/assets/images/fdecb4bb.profile.jpg"%>\" style=\"width: 50px\"><div class=\"media-body\"><div class=\"row\"><div class=\"col\"><a href=\"/users/<%= @campaign_reply.user.id %>?locale=zh-TW\"><%= @campaign_reply.user.user_profile.nickname%></a><span class=\"badge badge-primary\">提案人</span></div><div class=\"col\"><div class=\"text-right text-muted\"><small><%= @campaign_reply.created_at.strftime('%F') %></small></div></div></div><p><%= @campaign_reply.content %></p></div></div>" );
	$(".reply_<%= @campaign_reply.parent_id %>").val("");
<% end %>