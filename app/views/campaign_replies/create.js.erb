<% if @campaign_reply.parent_id == 0%>
	$("#new_reply").append("<div class=\"border p-3 mb-6\"><div class=\"media\"><img class=\"img-fluid rounded-circle mr-3\" src=\"<%= @campaign_reply.user.authorizations.present? ? "https://graph.facebook.com/#{@campaign_reply.user.authorizations[0].uid}/picture" : "https://help.lebara.com/assets/images/fdecb4bb.profile.jpg"%>\" style=\"width: 50px\"><div class=\"media-body\"><div class=\"row\"><div class=\"col\"><a href=\"/users/<%= @campaign_reply.user.id %>?locale=zh-TW\"><%= @campaign_reply.user.user_profile.nickname%></a></div><div class=\"col\"><div class=\"text-right text-muted\"><small><%= @campaign_reply.created_at.strftime('%F') %></small></div></div></div><p><%= @campaign_reply.content %></p><div id=\"reply_<%= @campaign_reply.id%>\"></div><form class=\"form-horizontal\" id=\"new_campaign_reply\" action=\"/campaign_replies?locale\" accept-charset=\"UTF-8\" data-remote=\"true\" method=\"post\"><input type=\"hidden\" name=\"authenticity_token\" value=\"<%= form_authenticity_token %>\"><input value=\"<%= current_user.id%>\" type=\"hidden\" name=\"campaign_reply[user_id]\" id=\"campaign_reply_user_id\"><input value=\"<%= @campaign_reply.campaign_id%>\" type=\"hidden\" name=\"campaign_reply[campaign_id]\" id=\"campaign_reply_campaign_id\"><input value=\"<%= @campaign_reply.id%>\" type=\"hidden\" name=\"campaign_reply[parent_id]\" id=\"campaign_reply_parent_id\"><input value=\"true\" type=\"hidden\" name=\"campaign_reply[enabled]\" id=\"campaign_reply_enabled\"><div class=\"form-row align-items-center\"><div class=\"col\"><textarea class=\"form-control mb-2 reply_3\" placeholder=\"回覆這則留言\" required=\"required\" name=\"campaign_reply[content]\" id=\"campaign_reply_content\"></textarea></div><div class=\"col-auto\"><button class=\"btn btn-outline-primary mb-2\">送出</button></div></div></form></div></div></div>" );	
	$("#campaign_reply_content").val("");
<% else %>
	$("#reply_<%= @campaign_reply.parent_id %>").append("<div class=\"media\"><img class=\"img-fluid rounded-circle mr-3\" src=\"<%= @campaign_reply.user.authorizations.present? ? "https://graph.facebook.com/#{@campaign_reply.user.authorizations[0].uid}/picture" : "https://help.lebara.com/assets/images/fdecb4bb.profile.jpg"%>\" style=\"width: 50px\"><div class=\"media-body\"><div class=\"row\"><div class=\"col\"><a href=\"/users/<%= @campaign_reply.user.id %>?locale=zh-TW\"><%= @campaign_reply.user.user_profile.nickname%></a></div><div class=\"col\"><div class=\"text-right text-muted\"><small><%= @campaign_reply.created_at.strftime('%F') %></small></div></div></div><p><%= @campaign_reply.content %></p></div></div>" );
	$(".reply_<%= @campaign_reply.parent_id %>").val("");
<% end %>